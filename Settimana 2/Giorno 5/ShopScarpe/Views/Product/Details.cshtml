@model Product

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<h2>Dettagli Prodotto</h2>

<div class="detail-container">
    <h3>@Model.Name</h3>
    <p>@Model.Description</p>
    <p><strong>Prezzo:</strong> @Model.Price €</p>
    <img src="@Model.ImageUrl" alt="Immagine del prodotto" class="img-fluid" />
</div>

<div>
    <a asp-action="Index" class="detail-link">Torna alla lista</a>
</div>
